<Window x:Class="ex01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ex01"
        xmlns:model="clr-namespace:ex01.Models"
        Title="ex01 INotifyPropertyChanged" Height="240" Width="360">
    <Window.Resources>
        <model:MyModel x:Key="key_MyModel" />
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource key_MyModel}}">
        <StackPanel Orientation="Vertical">
            <Label Grid.Row="0"
                   Content="{Binding MyProperty}" />
            <TextBox Grid.Row="1" Text="{Binding
                Path=MyProperty, Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
