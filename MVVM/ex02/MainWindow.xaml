<Window x:Class="ex02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ex02"
        xmlns:viewModel="clr-namespace:ex02.ViewModels"
        
        Title="ex02 ICommand" Width="320" Height="240"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <viewModel:MyViewModel x:Key="key_MyViewModel" />
    </Window.Resources>
    <Grid>
        <Button Content="Click me!"
                Command="{Binding PrintCommand,
                Source={StaticResource key_MyViewModel}}" />
    </Grid>
</Window>
